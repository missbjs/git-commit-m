{
    "name": "git-commit--message",
    "version": "1.0.3",
    "description": "A CLI tool that automatically generates commit messages using AI and commits changes",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "git-commit--message": "./dist/bin/commit.js"
    },
    "files": [
        "dist/"
    ],
    "scripts": {
        "run this alone, then commit": "",
        "this": "npx .",
        "bump": "pnpm version patch",
        "push": "git push",
        "commit": "pnpm bump && pnpm push",
        "npmjs": "pnpm publish",
        "build": "tsc",
        "dev": "node dist/bin/commit.js",
        "dev:help": "node dist/bin/commit.js --help",
        "show:help": "pnpm link -g && git-commit--message --help",
        "prepack": "npm run build"
    },
    "keywords": [
        "git",
        "commit",
        "ai",
        "automation",
        "cli"
    ],
    "author": "git-commit-m",
    "license": "MIT",
    "engines": {
        "node": ">=12.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/git-commit-m.git"
    },
    "bugs": {
        "url": "https://github.com/your-username/git-commit-m/issues"
    },
    "homepage": "https://github.com/your-username/git-commit-m#readme",
    "devDependencies": {
        "@types/chalk": "^0.4.31",
        "@types/commander": "^2.12.0",
        "@types/node": "^18.19.124",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "chalk": "^5.6.2",
        "commander": "^14.0.1"
    }
}
